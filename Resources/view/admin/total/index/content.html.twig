{# ПЕЧАТЬ #}

{% set current = query.data|first %}

<div class="d-flex w-100 align-items-center gap-2 mb-2">
    <img src="/logo.webp" style="max-height: 60px;" alt="...">
</div>

<div class="mb-3">
    <h5>Складские остатки</h5>
    {{ current.users_profile_location }}
</div>

<table class="table w-100 mb-2">
    <thead>
    <tr>
        <th scope="col"> Артикул
        <th scope="col"> Наименование
        <th scope="col"> Доступно
        <th scope="col"> Место
    <tbody>

    {% for card in query.data %}

    <tr>
        <th scope="row"> {{ card.material_article }}
        <td>
            {{ card.material_name }}

            {{ card.material_variation_value|call_twig_func(card.material_variation_reference~'_render') ~
            card.material_modification_value|call_twig_func(card.material_modification_reference~'_render') }}

            {{ card.material_offer_value|call_twig_func(card.material_offer_reference~'_render') }}

            {# Постфикс торгового предложения #}
            {{ card.material_offer_postfix }}
            {# Постфикс множественного варианта #}
            {{ card.material_variation_postfix }}
            {# Постфикс модификации #}
            {{ card.material_modification_postfix }}

        <td> {{ (card.stock_total - card.stock_reserve) }}
        <td> {{ card.stock_storage }}

            {% endfor %}

</table>
